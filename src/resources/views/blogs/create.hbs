<div class="mt-4 text-light">
  <h1 class="d-flex justify-content-center text-orange">Blog Post</h1>
  <form
    class="mt-4 w-50 mx-auto text-orange"
    method="POST"
    action="/blogs/store"
  >
    <div class="form-group mt-2">
      <label for="name">Blog Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        placeholder="Blog name"
        name="name"
      />
    </div>
    <div class="form-group mt-2">
      <label for="description_1">Blog Description 1</label>
      <input
        type="text"
        class="form-control"
        id="description_1"
        placeholder="Description 1"
        name="description_1"
      />
    </div>
    <div class="form-group mt-2">
      <label for="description_2">Blog Description 2</label>
      <input
        type="text"
        class="form-control"
        id="description_2"
        placeholder="Description 2"
        name="description_2"
      />
    </div>
    <div class="form-group mt-2">
      <label for="videoId">Video ID</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        placeholder="Video ID"
        name="videoId"
      />
    </div>
    <div class="form-group mt-2">
      <label for="image">Link Image</label>
      <input
        type="text"
        class="form-control"
        id="image"
        placeholder="Link Image"
        name="image"
      />
    </div>
    <div class="form-group mt-2">
      <label for="level">Level</label>
      <input
        type="text"
        class="form-control"
        id="level"
        placeholder="Level"
        name="level"
      />
    </div>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <button type="submit" class="btn btn-orange mt-2 text-light">Post</button>
    </div>
  </form>
</div>