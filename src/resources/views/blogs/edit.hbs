<div class="mt-4 text-orange">
  <h1 class="d-flex justify-content-center text-orange">Blog Update</h1>
  <form
    class="mt-4 w-50 mx-auto text-orange"
    method="POST"
    action="/blogs/{{blog._id}}?_method=PUT"
  >
    <div class="form-group mt-2">
      <label for="name">Blog Name</label>
      <input
        type="text"
        class="form-control"
        id="name"
        name="name"
        value="{{blog.name}}"
      />
    </div>
    <div class="form-group mt-2">
      <label for="description">Blog Descriptions</label>
      <input
        type="text"
        class="form-control"
        id="description"
        name="description"
        value="{{blog.description}}"
      />
    </div>
    <div class="form-group mt-2">
      <label for="videoId">Video ID</label>
      <input
        type="text"
        class="form-control"
        id="videoId"
        name="videoId"
        value="{{blog.videoId}}"
      />
    </div>
    <div class="form-group mt-2">
      <label for="image">Link Image</label>
      <input
        type="text"
        class="form-control"
        id="image"
        name="image"
        value="{{blog.image}}"
      />
    </div>
    <div class="form-group mt-2">
      <label for="level">Level</label>
      <input
        type="text"
        class="form-control"
        id="level"
        name="level"
        value="{{blog.level}}"
      />
    </div>
    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
      <button
        type="submit"
        class="btn btn-primary text-light mt-2"
      >Update</button>
    </div>
  </form>
</div>