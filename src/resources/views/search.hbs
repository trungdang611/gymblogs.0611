<div class="container row">
  {{#each blogs}}
    <div class="col-sm-4">
      <div class="card mt-4 bg-gray border border-0 text-light">
        <a href="/blogs/{{this.slug}}">
          <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" />
        </a>
        <div class="card-body">
          <a href="/blogs/{{this.slug}}" class="text-orange">
            <h5 class="card-title">{{this.name}}</h5>
          </a>
          <p class="card-text">{{this.description}}</p>
        </div>
      </div>
    </div>
  {{else}}
    <div class="vw-100 notFound d-flex flex-column align-items-center">
      <img src="https://www.idiosystech.com/img/no_result_found.png" alt="" />
      <h3 class="text-orange">
        Sorry! No results found.
      </h3>
    </div>
  {{/each}}
</div>